{
    "version": 2,
    "builds": [
      {
        "src": "backend/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
      },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "ui/staticfiles"
        }
      }
    ],
    "routes": [
      {
        "src": "/media/(.*)",
        "dest": "/media/$1"
      },
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "backend/wsgi.py"
      }
  ],
    "outputDirectory": "ui/staticfiles"
  }